			<!-- Examples of how to have a Null value for these elements-->
			<addr nullFlavor="NA"/>
			<telecom nullFlavor="NA"/>
			<assignedPerson>
				<name>
					<given>Claire</given>
					<!-- The "SP" is "Spouse" from HL7 Code System EntityNamePartQualifier 2.16.840.1.113883.5.43 -->
					<family qualifier="SP">Baker</family>
